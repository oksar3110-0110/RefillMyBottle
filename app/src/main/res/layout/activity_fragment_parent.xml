<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.refillmybottle.refilmybottle.FragmentParent">
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_navigation"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/mapsBut"
            android:layout_width="75dp"
            android:layout_height="56dp">
            <ImageView
                android:id="@+id/maps"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/placeholder_nav"
                android:contentDescription="@string/title_maps"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/maps"
                android:text="Maps"
                android:gravity="center" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/newBut"
            android:layout_width="75dp"
            android:layout_height="56dp">
            <ImageView
                android:id="@+id/New"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/idea_nav"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title_new"
                android:layout_below="@+id/New" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/eventBut"
            android:layout_width="75dp"
            android:layout_height="56dp">
            <ImageView
                android:id="@+id/Event"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/calendar_nav"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_event"
                android:layout_below="@+id/Event"
                android:gravity="center" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ShopBut"
            android:layout_width="75dp"
            android:layout_height="56dp">
            <ImageView
                android:id="@+id/Shop"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/cart_nav" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Shop"
                android:text="@string/title_shop"
                android:gravity="center" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/profile_But"
            android:layout_width="75dp"
            android:layout_height="56dp">
            <ImageView
                android:id="@+id/Profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_nav"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_Profile"
                android:layout_below="@+id/Profile"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
