<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.refillmybottle.refilmybottle.newrefill.fragment_new_intro">
    <android.support.v7.widget.CardView
        android:id="@+id/card_reward"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardBackgroundColor="@color/background_card"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/newrefillstation"
                android:layout_margin="46dp"
                android:elevation="10dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/title_suGest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/suggest_title"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/card_reward"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/content_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/title_suGest"
        android:text="@string/lipsum_suggest"
        android:layout_marginTop="5dp" />

</RelativeLayout>
