<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="180dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#fff">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_item_shop"
                android:layout_width="match_parent"
                android:src="@drawable/bottleprogress"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/description_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_anchor="@+id/image_item_shop"
                android:padding="5dp"
                android:background="@color/blue1"
                app:layout_anchorGravity="bottom|center">
                <TextView
                    android:id="@+id/brand_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bottle A1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/price_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:text="$15" />
                <TextView
                    android:id="@+id/item_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 points"
                    android:textSize="9sp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/brand_item" />
                <TextView
                    android:id="@+id/disc_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:text="$10"
                    android:layout_below="@+id/price_item"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
        </android.support.design.widget.CoordinatorLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
