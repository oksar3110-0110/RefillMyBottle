<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.refillmybottle.refilmybottle.statistik.AdapterVoucher">
    <android.support.v7.widget.CardView
        android:id="@+id/card_vouchers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_voucher"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/RefillSationPerson" />
            <TextView
                android:id="@+id/title_card_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy bottle RefillMyWater 1L(Winter Edition)"
                android:layout_below="@+id/image_voucher"
                android:layout_marginLeft="20dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
