<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.refillmybottle.refilmybottle.PermissionLocation">
    <android.support.v7.widget.CardView
        android:id="@+id/card_permission"
        android:layout_width="300dp"
        android:layout_height="285dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="20dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/title_allow"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_permission_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_permission"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/description_allow" />

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="0.1pt"
                android:layout_below="@+id/details_permission_dialog"
                android:layout_marginTop="20dp"
                android:background="#757575"
                android:orientation="horizontal" />
            <TextView
                android:id="@+id/only_apps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Only While Using the App"
                android:gravity="center"
                android:layout_below="@+id/row1"
                android:layout_marginVertical="10dp"
                android:textColor="@color/blue1"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="0.1pt"
                android:layout_below="@id/only_apps"
                android:background="#757575"
                android:orientation="horizontal" />
            <TextView
                android:id="@+id/always_allow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Always Allow"
                android:gravity="center"
                android:textColor="@color/blue1"
                android:textSize="16sp"
                android:layout_marginVertical="10dp"
                android:layout_below="@+id/row2" />
            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="0.1pt"
                android:background="#757575"
                android:orientation="horizontal"
                android:layout_below="@+id/always_allow">
            </LinearLayout>
            <TextView
                android:id="@+id/dont_allow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't Allow"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_below="@+id/row3"
                android:textColor="@color/blue1"
                android:layout_marginVertical="10dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
