<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="500dp"
    android:background="#fff"
    android:orientation="vertical"
    android:elevation="26dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/gradient"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="48dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_gradient"
        android:backgroundTint="@color/start_gradient">
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/circle_gradient"
            android:backgroundTint="@color/center_graient"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:id="@+id/end_gradient"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/end_gradient"
                android:background="@drawable/circle_gradient"
                ></RelativeLayout>
            <TextView
                android:id="@+id/earned_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Point"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="#216FB2"
                android:textSize="50sp" />
            <TextView
                android:id="@+id/yougot_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/got_point"
                android:layout_below="@+id/end_gradient"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/text_congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lipsum_text"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/done_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/checkbox" />
</LinearLayout>